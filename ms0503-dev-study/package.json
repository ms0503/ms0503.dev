{
    "dependencies": {
        "image-size": "^2",
        "isbot": "^5",
        "ms0503-dev-db": "workspace:*",
        "react": "^19",
        "react-dom": "^19",
        "react-icons": "^5",
        "react-router": "^7",
        "remix-auth": "^4",
        "remix-auth-form": "^3",
        "tsup": "^8",
        "unified": "^11",
        "use-debounce": "^10"
    },
    "devDependencies": {
        "@cloudflare/vite-plugin": "^1",
        "@eslint/compat": "^1",
        "@eslint/eslintrc": "^3",
        "@react-router/dev": "^7",
        "@tailwindcss/language-server": "^0.14",
        "@tailwindcss/vite": "^4",
        "@types/node": "^22",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "eslint": "^9",
        "jiti": "^2",
        "ms0503-dev-eslint": "workspace:*",
        "npm-run-all": "^4",
        "rimraf": "^6",
        "stylelint": "^16",
        "stylelint-config-standard": "^38",
        "stylelint-declaration-block-no-ignored-properties": "^2",
        "stylelint-order": "^6",
        "tailwindcss": "^4",
        "typescript": "^5",
        "vite": "^6",
        "vite-tsconfig-paths": "^5",
        "wrangler": "^4"
    },
    "engines": {
        "node": ">=21.0.0",
        "npm": "use yarn instead",
        "pnpm": "use yarn instead",
        "yarn": ">=4.0.0"
    },
    "name": "ms0503-dev-study",
    "packageManager": "yarn@4.9.2",
    "private": true,
    "scripts": {
        "build": "react-router build",
        "clean": "rimraf build/",
        "deploy": "yarn run build && wrangler deploy",
        "dev": "react-router dev",
        "fontgen": "run-s fontgen:otf2ttf fontgen:subset fontgen:fixfontname",
        "fontgen:fixfontname": "patch -p1 <fix-font-name.patch",
        "fontgen:otf2ttf": "run-p 'fontgen:otf2ttf:*'",
        "fontgen:otf2ttf:bold": "fontforge otf2ttf.pe Bold",
        "fontgen:otf2ttf:regular": "fontforge otf2ttf.pe Regular",
        "fontgen:subset": "yarn dlx fontmin -t \"$(cat noto-sans-mono-cjk-jp-include.txt)\" fonts/NotoSansMonoCJKjp-*.ttf public/fonts/",
        "lint": "run-p 'lint:lint:*'",
        "lint:fix": "run-p 'lint:fix:*'",
        "lint:fix:js": "eslint --cache --cache-location ./node_modules/.cache/eslint/ --fix .",
        "lint:fix:style": "stylelint app/**/*.css --fix",
        "lint:lint:js": "eslint --cache --cache-location ./node_modules/.cache/eslint/ .",
        "lint:lint:style": "stylelint app/**/*.css",
        "preview": "yarn run build && vite preview",
        "start": "wrangler pages dev ./build/client/",
        "typecheck": "yarn run typegen && tsc",
        "typegen": "run-p 'typegen:*'",
        "typegen:react-router": "react-router typegen",
        "typegen:wrangler": "wrangler types"
    },
    "type": "module"
}
